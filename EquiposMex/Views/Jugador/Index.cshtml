@model IEnumerable<EquiposMex.Models.JUGADOR>

@{
    ViewBag.Title = "Index";
}

<h2>LISTA DE JUGADORES</h2>

<p>
    @Html.ActionLink("Nuevo jugador", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_JUGADOR)
        </th>
        <th>
            ID_PADRE
            @*@Html.DisplayNameFor(model => model.PADRE.APELLIDOSPADRE)*@
        </th>
        <th>
            NOMBRE EQUIPO
            @*@Html.DisplayNameFor(model => model.EQUIPO.NOMBREEQUIPO)*@
        </th>
        <th>
            NOMBRE JUGADOR
            @*@Html.DisplayNameFor(model => model.NOMBREJUGADOR)*@
        </th>
        <th>
            APELLIDOS JUGADOR
            @*@Html.DisplayNameFor(model => model.APELLIDOSJUGADOR)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDAD)
        </th>
        <th colspan="3">OPCIONES</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_JUGADOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PADRE.APELLIDOSPADRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EQUIPO.NOMBREEQUIPO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBREJUGADOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.APELLIDOSJUGADOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDAD)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID_JUGADOR })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID_JUGADOR })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ID_JUGADOR })
        </td>
    </tr>
}

</table>
